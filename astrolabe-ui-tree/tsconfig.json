{
	"compilerOptions": {
		"target": "es5",
		"outDir": ".",
		"noEmit": true,
		"lib": ["es2019", "es7", "es6", "dom"],
		"allowJs": false,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"importHelpers": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}
